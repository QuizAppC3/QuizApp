<div class="quiz-start-page">
  <h1 class="headline">Willkommen zum Quiz!</h1>
  <p class="subline">Teste dein Wissen und hab Spaß!</p>

  <%= form_with url: game_start_path, method: :get, local: true, html: { class: "quiz-form" } do %>
    <div class="form-group">
      <label for="total_questions">Wie viele Fragen möchtest du spielen?</label>
      <%= number_field_tag :total_questions, 5, min: 1, class: "input-field", required: true %>
    </div>
    <%= submit_tag "Spiel starten", class: "start-button" %>
  <% end %>
</div>
