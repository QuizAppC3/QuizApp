<div class="login-container">
  <h2 class="login-title">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="form-note">Aktuell wartend auf Bestätigung für: <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      <% if @minimum_password_length %>
        <p class="form-note"><%= @minimum_password_length %> Zeichen mindestens</p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, class: "form-label" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Aktualisieren", class: "auth-button" %>
    </div>
  <% end %>

  <h3 class="delete-title">Account löschen</h3>

  <div class="form-actions">
    <%= button_to "Account wirklich löschen", registration_path(resource_name), method: :delete, data: { confirm: "Bist du sicher?" }, class: "btn btn-secondary" %>
    <%= link_to "Zurück", root_path, class: "btn btn-primary", style: "margin-top: 1rem;" %>
  </div>
</div>
